<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Posted by {{user.username}} on {{format_date createdAt}}</p>
  <hr>
  <h3>Comments</h3>
  {{#each comments}}
    <div class="comment">
      <p>{{user.username}} said:</p>
      <p>{{content}}</p>
      <p>Posted on {{format_date createdAt}}</p>
    </div>
  {{/each}}
  {{#if signed_in}}
    <div class="add-comment">
      <h3>Add a Comment</h3>
      <form class="comment-form">
        <textarea class="form-input" id="comment-content" name="comment-content" placeholder="Enter your comment"></textarea>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  {{else}}
    <p>You must be logged in to leave a comment. <a href="/login">Log in</a></p>
  {{/if}}
</div>